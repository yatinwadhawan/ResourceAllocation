<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/singleeventlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewSingleEventcount"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1." />

            <TextView
                android:id="@+id/textViewSingleEventTitle"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Name" />

            <TextView
                android:id="@+id/textViewSingleEventOptions"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Y()" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewSingleEventClientName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="Client" />

        <TextView
            android:id="@+id/textViewSingleEventCaseName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="Case" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewSingleEventdate"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="Date" />

            <TextView
                android:id="@+id/textViewSingleEventTime"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Time" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewSingleEventScheduledBy"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="By" />
    </LinearLayout>

</LinearLayout>