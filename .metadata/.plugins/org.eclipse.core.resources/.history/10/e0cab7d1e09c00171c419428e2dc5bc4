		return new State(graph);
	}

	@Override
	public Object get(Object variableKeys) {
		if (variableKeys.equals(NodeStatus.STATUS))
			return graph;
		else if (variableKeys.equals(TestBurlap.VAR_Y))
			return y;

		throw new UnknownKeyException(variableKeys);
	}

	@Override
